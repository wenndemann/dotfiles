"""""""""""""""""""""""""""""""
" user interface
"""""""""""""""""""""""""""""""
" 10 lines to the cursor
set so=10

" wildmenu
set wildmenu

" ignor files for wildmenu
set wildignore=*.o,*~

" highlight search results
set hlsearch


"""""""""""""""""""""""""""""""
" colors
"""""""""""""""""""""""""""""""
syntax enable
set number
colorscheme desert

set encoding=utf8

"""""""""""""""""""""""""""""""
" text, tab, indent
""""""""""""""""""""""""""""""

" spaces instead of tabs
set expandtab

" 1 tab == 4 spaces
set shiftwidth=4
set tabstop=4

" indent
set ai
set si
set wrap
